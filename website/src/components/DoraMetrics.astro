const metrics = [
  {
    label: "Deployment Frequency",
    value: "High",
    description: "Multiple production-ready builds per day, fully automated.",
    icon: "M13 10V3L4 14h7v7l9-11h-7z",
    color: "text-primary-600 dark:text-primary-400",
    bgColor: "bg-primary-50 dark:bg-primary-950",
  },
  {
    label: "Lead Time for Changes",
    value: "< 24h",
    description: "Rapid cycle time from commit to verified cross-platform artifact.",
    icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z",
    color: "text-primary-600 dark:text-primary-400",
    bgColor: "bg-primary-50 dark:bg-primary-950",
  },
  {
    label: "Change Failure Rate",
    value: "< 1%",
    description: "Strict Podman-based validation ensures near-zero regression.",
    icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
    color: "text-primary-600 dark:text-primary-400",
    bgColor: "bg-primary-50 dark:bg-primary-950",
  },
  {
    label: "Time to Restore",
    value: "< 1h",
    description: "Automated recovery protocols and proactive health monitoring.",
    icon: "M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15",
    color: "text-primary-600 dark:text-primary-400",
    bgColor: "bg-primary-50 dark:bg-primary-950",
  },
];
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
  {metrics.map((metric) => (
    <div class="bg-white dark:bg-secondary-800 p-8 rounded-2xl shadow-lg border border-secondary-200 dark:border-secondary-700 transition-all hover:shadow-xl hover:-translate-y-1 hover:border-primary-500/50">
      <div class={`w-14 h-14 ${metric.bgColor} rounded-2xl flex items-center justify-center mb-6 shadow-inner transition-colors`}>
        <svg class={`w-7 h-7 ${metric.color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={metric.icon}></path>
        </svg>
      </div>
      <h3 class="text-xs font-black text-secondary-500 dark:text-secondary-400 mb-1 uppercase tracking-widest">{metric.label}</h3>
      <div class="text-4xl font-black text-secondary-900 dark:text-white mb-3 tracking-tighter transition-colors">
        {metric.value}
      </div>
      <p class="text-sm text-secondary-600 dark:text-secondary-400 leading-relaxed font-medium transition-colors">
        {metric.description}
      </p>
    </div>
  ))}
</div>
