---
/* ========================================================================
 * Project: pharos
 * Component: Web Console
 * File: src/features/mdb/search/MdbResultsGrid.astro
 * Author: Richard D. (https://github.com/iamrichardd)
 * License: AGPL-3.0 (See LICENSE file for details)
 * * Purpose (The "Why"):
 * UI component for displaying MDB search results in a grid.
 * Mobile-first, card-based layout with clear field labeling.
 * * Traceability:
 * Related to Task 16.6 (Issue #69).
 * ======================================================================== */
import type { PharosResponse } from '../../../lib/pharos';

interface Props {
    result: PharosResponse | null;
    error: string | null;
}

const { result, error } = Astro.props;
---

{error && (
    <div class="rounded-xl bg-red-50 p-4 border border-red-200">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Error executing query</h3>
                <div class="mt-2 text-sm text-red-700">
                    <p>{error}</p>
                </div>
            </div>
        </div>
    </div>
)}

{result && (
    <div class="space-y-4">
        <div class="flex justify-between items-center border-b border-slate-200 pb-2">
            <h2 class="text-lg font-medium text-slate-900">Results</h2>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                {result.type === 'matches' ? `${result.records?.length || 0} found` : (result.type === 'ok' ? 'Success' : 'Error')}
            </span>
        </div>

        {result.type === 'matches' && result.records && result.records.length > 0 ? (
            <div class="grid gap-4 grid-cols-1 sm:grid-cols-2">
                {result.records.map((record) => (
                    <div class="bg-white overflow-hidden shadow-sm rounded-xl border border-slate-200 hover:border-blue-300 transition-colors">
                        <div class="px-4 py-3 sm:px-6 bg-slate-50 border-b border-slate-100 flex justify-between items-center">
                            <h3 class="text-sm leading-6 font-medium text-slate-900">Record ID: {record.id}</h3>
                        </div>
                        <div class="px-4 py-3 sm:px-6">
                            <dl class="grid grid-cols-1 gap-x-4 gap-y-3 sm:grid-cols-2">
                                {record.fields.map((field) => (
                                    <div class="sm:col-span-1">
                                        <dt class="text-xs font-medium text-slate-500 uppercase tracking-wider">{field.key}</dt>
                                        <dd class="mt-1 text-sm text-slate-900 break-words">{field.value}</dd>
                                    </div>
                                ))}
                            </dl>
                        </div>
                    </div>
                ))}
            </div>
        ) : result.type === 'ok' ? (
            <div class="rounded-xl bg-green-50 p-4 border border-green-200">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-green-800">{result.message}</p>
                    </div>
                </div>
            </div>
        ) : result.type === 'error' ? (
            <div class="rounded-xl bg-red-50 p-4 border border-red-200">
                <p class="text-sm font-medium text-red-800">Error {result.code}: {result.message}</p>
            </div>
        ) : (
            <p class="text-slate-500 text-center py-8">No records found.</p>
        )}
    </div>
)}
